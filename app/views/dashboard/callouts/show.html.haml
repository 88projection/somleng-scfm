.col-12
  .btn-toolbar{ role: 'toolbar' }
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Back', :back, class: 'btn btn-outline-dark', method: :get
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Edit', edit_dashboard_callout_path(@callout), class: ' btn btn-outline-dark', method: :get
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Delete', dashboard_callout_path(@callout), class: ' btn btn-outline-dark', method: :delete, data: { confirm: 'Are you sure?' }
  %br
.col-12.col-md-10
  .card
    .card-header
      Callout detail
    .card-body
      %dl.row
        %dt.col-sm-5.text-md-right ID:
        %dd.col-sm-7= @callout.id
      %dl.row
        %dt.col-sm-5.text-md-right Meta data:
        %dd.col-sm-7= infinit_list(@callout.metadata)
      %dl.row
        %dt.col-sm-5.text-md-right Created at:
        %dd.col-sm-7= @callout.created_at
